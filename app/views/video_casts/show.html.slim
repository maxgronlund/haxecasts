    .grid-5.prefix-1.alpha
      'download:
      = link_to 'mp4', @video_cast.mp4.url
      '&nbsp;
      = link_to 'webm', @video_cast.webm.url
      '&nbsp;
      = link_to 'ogv', @video_cast.ogv.url
      '&nbsp;
      = link_to 'm4v', @video_cast.m4v.url    
