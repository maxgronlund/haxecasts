    .edit
      = link_to t('system.edit'), edit_video_cast_path(@video_cast)
.grid-12
  .grid-9.alpha
      = render 'resource_urls'
      .grid-9.alpha.omega.top-margin
        = markdown(@video_cast.notes)
      = render 'code_examples'
      = render 'flash_examples'
      = render 'comments'

  .grid-3.omega
