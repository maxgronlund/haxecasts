.header
  .grid-12
    .grid-1.alpha
      .edit
        h1 = @episode_nr
      'time 
      '-
      = @video_cast.play_time
   
    .grid-11.omega
      h1 =  @video_cast.title
      .grid-7.alpha
        = markdown(@video_cast.body)
